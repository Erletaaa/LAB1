@{
	Layout = "../Shared/_AuthLayout.cshtml";
}

<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card">
			<h4 class="card-title ml-3 ">Sign up</h4>
			<article class="card-body">
				<form enctype="multipart/form-data" method="post" asp-action="Register" asp-controller="Authentication">
					<div class="form-row">
						<div class="col form-group">
							<label>Username</label>
							<input type="text" class="form-control" name="Username" placeholder="">
						</div>
					</div>
					<div class="form-group">
						<label>Email address</label>
						<input type="email" class="form-control" name="Email" placeholder="">
					</div>
					<div class="form-group">
						<label>Profile description</label>
						<textarea name="Description" class="form-control"></textarea>
					</div>
					<div class="form-group">
						<label>Birthday</label>
						<input class="form-control" type="date" name="Birthday">
					</div>
					<div class="form-group">
						<label>Add profile picture</label>
						<input class="form-control" type="file" name="Picture">
					</div>
					<div class="form-group">
						<label>Create password</label>
						<input class="form-control" type="password" name="Password">
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-block" style="background-color: #22cc9d; color: #fff; font-weight: 600;"> Register  </button>
					</div>
					<small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept our <br> Terms of use and Privacy Policy.</small>
				</form>
			</article>
			<div class="border-top card-body text-center">Have an account? <a href="/Authentication/Login" style="color: #22cc9d;">Log In</a></div>
		</div>
	</div>
</div>